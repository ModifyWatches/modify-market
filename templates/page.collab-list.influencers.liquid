  <p>Interested in partnering with us?<a href="/pages/collaboration-form"><button>APPLY HERE</button></a></p>
</div>

<!-- COLLAB COLLECTIONS LIST -->
<div class="collab-collection-list">
  {% for collection in collections %}
    {% if collection.tags contains 'influencer' %}
        {% unless collection.handle == 'all' or collection.handle == 'black' or collection.handle == 'pattern' or collection.handle == 'watch' or collection.handle == 'photography' %}
            <div class="thumbnail">
                <a class="collections" href="{{ collection.url }}" title="Browse {{ collection_title }}">
                {% if collection.image %}
                    <img class="collections" {% if settings.align_height %}style="height:{{ settings.collection_height }}px"{% endif %} src="{{ collection.image.src | collection_img_url: 'large' }}" alt="{{ collection.image.alt }}" />
                {% else %}
                    {{ collection.products.first.featured_image | product_img_url: 'large' | img_tag: collection_title }}
                {% endif %}
            
                <div class="info collections">
                    <p class="title">{{ collection.title }}</span>
                </div>
                </a>
            </div>
      {% endunless %}
    {% endif %}
  {% endfor %}
</div>

