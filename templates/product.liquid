                        <img src="{{ featured_image | img_url: 'compact' }}" alt="{{ image.alt | escape }}">
                    </a>
                </li>
                <li class="grid__item one-sixth">
                    <a href="{{ 'SiliconeWatch_Side.jpg' | asset_url }}" class="product-single__thumbnail">
                        <img src="{{ 'SiliconeWatch_SideThumb.jpg' | asset_url }}" alt="{{ image.alt | escape }}">
                    </a>
                </li>
                <li class="grid__item one-sixth">
                    <a href="{{ 'SiliconeWatch_Angle.jpg' | asset_url }}" class="product-single__thumbnail">
                        <img src="{{ 'SiliconeWatch_AngleThumb.jpg' | asset_url }}" alt="{{ image.alt | escape }}">
                    </a>
                </li>
