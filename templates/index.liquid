<!-- Define Sidenav Lists -->
{% comment %}
    Edit these variables to point to different link lists.
{% endcomment %}
{% assign sidenav1 = linklists.shop %}
{% assign sidenav2 = linklists.great-gifts %}
{% assign sidenav3 = linklists.interests %}
{% assign sidenav4 = linklists.partners %}



<!-- /templates/index.liquid -->
<section class="grid__item large--three-quarters  medium--three-quarters  small--one-whole pageBanner homeBanner genSection right">
	<h1 class="grid__item two-thirds text-white small--four-fifths">
       Great products from nonprofits, artists and more!
    </h1>
</section>
<section class="grid__item large--one-quarter medium--one-quarter small--one-whole light-bg pageBanner genSection">
	<div class="grid__item">
        <div class="grid__item">
        <h5 class="large--eleven-twelfths medium--one-whole small--one-whole small--text-center">
            Help your fans get the products they love, yours.
        </h5>
        <div class="small--one-whole small--text-center">
            <button class="btn--secondary small-margin "><a href="/pages/storefronts">Get Started</a></button>
            <p class="small--hide">
                <i>
                It's free!
                </i>
            </p>
        
        </div>
        </div>
    </div>
</section>


<section class="grid__item large--one-quarter medium--one-quarter small--hide clear ">
    {% comment %}
        Make sure array here matches variables at the top of page.
    {% endcomment %}
    {% assign sidenavArray = "sidenav1|sidenav2|sidenav3|sidenav4" | split: "|" %}
    {% for item in sidenavArray %}
        <div class="grid__item large--one-whole medium--one-whole small--one-half ">
            <h4>{{ [item].title }}</h4>
            <hr class="orangeDash">
            <ul class="homeList">
                {% for link in [item].links %}
                <li>
                    <a href="{{ link.url }}" title="{{ link.title | escape }}">{{ link.title }}</a>
                </li>
                {% endfor %}
            </ul>
        </div>
    {% endfor %}
</section>

<section class="grid__item large--three-quarters medium--three-quarters small--one-whole big-padding" id="pageTop">
{% comment %}

  This is the homepage of your site.

  More info on global variables (available on all templates):
    - http://docs.shopify.com/themes/liquid-variables/global
{% endcomment %}

<h2>Trending Designs</h2>

{% comment %}
  Use class grid-uniform to have evenly sized columns clear
  each other properly at each breakpoint.
{% endcomment %}
	 {% assign grid_item_width = 'large--one-quarter medium--one-third small--one-half' %}
		<div class="grid-uniform">
			{% paginate collections.home-page.products by 32 %}
		<ul class="collection-matrix">
		 {% for product in collections.home-page.products %}
		 <li id="product-{{ forloop.index | plus:paginate.current_offset }}" class="grid__item {{ grid_item_width }}">
		  {% include 'art-grid' %}
		 </li> 
		 {% endfor %}
		 <!--<li class="top"><a href="#pageTop">Back to Top</a></li>  -->      
		 {% if paginate.next %}
		  <li class="more"><button class="btn--secondary"><a href="{{ paginate.next.url }}">See More</a></button></li>        
		 {% endif %}
		 <div style="clear: both"></div>
		</ul>
		
		<div id="product-list-foot"></div>
		{% endpaginate %}


</div>
</section>

<!-- Scripts -->
<script>
/* Mixpanel Scripts */
  mixpanel.track("Page Views" , {"Page": "Homepage"});  
</script>